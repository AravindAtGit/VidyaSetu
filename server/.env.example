# Environment variables for the server
# Copy this file to .env and update with your actual values

# Server port
# Development: 5000
# Production: 3000 or process.env.PORT from hosting provider
PORT=3000

# MongoDB connection string
# Development: mongodb://localhost:27017/vidyasetu
# Production: Use your cloud MongoDB connection string (e.g., MongoDB Atlas)
MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/vidyasetu?retryWrites=true&w=majority"

# Session secret for express-session (use a strong, random string in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET="your-super-secure-session-secret-key-here"

# Client application URL for CORS
# Development: http://localhost:3000
# Production: https://your-production-domain.com
CLIENT_URL="https://your-production-domain.com"

# Node environment
# Development: development
# Production: production
NODE_ENV="production"
